@model List<DiskInventory.Models.DiskHasRenter>
@{
    ViewBag.Title = "Checkout Manager";
}
<h1>@ViewBag.Title</h1>

<a asp-controller="DiskHasRenter" asp-action="Add">Add</a>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Disk Name</th>
                <th>Renter Last Name</th>
                <th>Rent First Name</th>
                <th>Rented Date</th>
                <th>Returned Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var diskhasrenter in Model)
            {
            <tr>
                <td>@diskhasrenter.Disk.DiskName</td>
                <td>@diskhasrenter.Renter.Lastname</td>
                <td>@diskhasrenter.Renter.Firstname</td>
                <td>@diskhasrenter.RentDate</td>
                <td>@diskhasrenter.ReturnedDate</td>
                <td>
                    <a asp-controller="DiskHasRenter" asp-action="Edit" asp-route-id="@diskhasrenter.Id">Edit</a>

                </td>

            </tr>
            }
        </tbody>

    </table>
}
else
{
    <div>No data found.</div>
}

