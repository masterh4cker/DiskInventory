@model Disk
@{
    string title = ViewBag.Action + "Disk";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="Post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DiskName"></label>
        <input asp-for="DiskName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DiskType"></label>
        <input asp-for="DiskType" class="form-control" />
    </div>
    <input type="hidden" asp-for="DiskId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Disk" asp-action="List" class="btn btn-primary">Cancel</a>
</form>
